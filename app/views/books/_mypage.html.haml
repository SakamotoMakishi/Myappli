- if user_signed_in?
  .mypage
    = image_tag current_user.avatar,class:"mypage__image"
    .mypage__name
      %h2= current_user.name
    %ul.mypage_list
      %li.list1
        = link_to 'プロフィール',root_path
      %li.list4
        週間読書数
        .book_week
          = "#{@book_week}"
        冊
      %li.list5
        月間読書数
        .book_month
          = "#{@book_month}"
        冊
      %li.list2
        合計登録数
        .total
          = "#{@total}"
        冊
      %li.list3
        - @last_book.each do |book|
          最近の投稿
          .book_title{title: "#{book.title}"}
            = book.title
          = link_to "/books/#{book.id}/reviews/new" do
            .book_image{style:"background-image:url(#{book.image})"}
- else